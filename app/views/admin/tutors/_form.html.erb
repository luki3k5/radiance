  </p>  
  <p class="input">
    <%= label :name, "Name" %>  
    <%= g.text_field :name %>  
  </p>  
  <p class="input">  
    <%= label :lastname, "Lastname" %>  
    <%= g.text_field :lastname %>  
  </p>  
  <p class="input">
    <%= label :email, "Email" %>  
    <%= g.text_field  :email %>  
  </p> 
<% end %>
