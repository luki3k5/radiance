<tr class="unit_page" id="page_<%= page.id %>">
  <td class="page"><%= link_to page.title, edit_developer_stitch_unit_page_path(page.stitch_unit,page) ,:class => "edit_page_link"%></td>
  <td class="gewichtung">- %</td>
  <td class="functions">
    <% if current_user.role.editable(page.stitch_unit.stitch_module) %>
      <%= link_to image_tag("space.gif", :alt => "edit Page", :class => "icon useredit"), ajax_edit_developer_stitch_unit_page_path(page.stitch_unit,page), :class => "edit_page" %>
      <%= link_to image_tag("space.gif", :alt => "copy Page", :class => "icon duplicate"), developer_stitch_module_page_copy_path(page.stitch_unit.stitch_module), :class => "copy_page" %>
      <%= link_to image_tag("space.gif", :alt => "delete Page", :class => "icon delete"), developer_stitch_unit_page_path(page.stitch_unit,page), :method => :delete, :confirm => "Are You Sure you want to delete this Page and all it's Content", :remote => true, :class => "delete_page" %>
    <% else %>
      <%= image_tag("space.gif") %><%= image_tag("space.gif") %>
    <% end %>  
  </td>
</tr>