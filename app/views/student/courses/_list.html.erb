<table  class="userlist">
  <thead>
    <tr>
      <td>Short Title</td>
      <td>Title</td>
      <td>Language</td>
			<td>&nbsp;</td>
    </tr>
  </thead>
  <tbody>
    <% courses.each do |course| %>
      <tr>
        <td><%= link_to course.short_title, student_course_path(course) %></td>
        <td><%= course.title %></td>
        <td><%= course.language %></td>
				<td><%= link_to image_tag("space.gif", :title => "show Coursebook", :class => "icon duplicate"), show_coursebook_student_course_path(course) %>
      </tr>
    <% end %>
  </tbody>
</table>