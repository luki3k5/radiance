<p class="input">
  <% unless e.txt == "" %>
    <label for="Input"><%=raw e.txt.gsub("\n","<br />") %></label>
  <% end %>
	<% if @student.give_answer?(@student, e) %>
		<br />
	  <%= show_answer(e, @student).txt %>
		<br />
		Assesment: <%= show_answer(e, current_user.role).score %>/<%= show_score(e, @tutor) %>
	<% end %>
</p>